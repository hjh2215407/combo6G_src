<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/linParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conMain"
            android:background="#fff"
            android:layout_width="400dp"
            android:layout_height="300dp">

            <CheckBox
                android:id="@+id/chSweptSA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="SweptSA"
                autofit:layout_constraintBottom_toTopOf="@+id/chChannelPower"
                autofit:layout_constraintEnd_toEndOf="parent"
                autofit:layout_constraintHorizontal_bias="0.44"
                autofit:layout_constraintStart_toStartOf="parent"
                autofit:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <CheckBox
                android:id="@+id/chChannelPower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Channel Power"
                autofit:layout_constraintBottom_toTopOf="@+id/chOccBw"
                autofit:layout_constraintEnd_toEndOf="parent"
                autofit:layout_constraintStart_toStartOf="parent"
                autofit:layout_constraintTop_toBottomOf="@+id/chSweptSA" />

            <CheckBox
                android:id="@+id/chOccBw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Occupied BW"
                autofit:layout_constraintBottom_toTopOf="@+id/chAclr"
                autofit:layout_constraintEnd_toEndOf="parent"
                autofit:layout_constraintHorizontal_bias="0.48"
                autofit:layout_constraintStart_toStartOf="parent"
                autofit:layout_constraintTop_toBottomOf="@+id/chChannelPower" />

            <CheckBox
                android:id="@+id/chAclr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="ACLR"
                autofit:layout_constraintBottom_toTopOf="@+id/chTransmitOnOff"
                autofit:layout_constraintEnd_toEndOf="parent"
                autofit:layout_constraintHorizontal_bias="0.411"
                autofit:layout_constraintStart_toStartOf="parent"
                autofit:layout_constraintTop_toBottomOf="@+id/chOccBw" />

            <CheckBox
                android:id="@+id/chTransmitOnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="79dp"
                android:text="Transmit On/Off"
                autofit:layout_constraintBottom_toBottomOf="parent"
                autofit:layout_constraintEnd_toEndOf="parent"
                autofit:layout_constraintHorizontal_bias="0.513"
                autofit:layout_constraintStart_toStartOf="parent"
                autofit:layout_constraintTop_toBottomOf="@+id/chAclr" />
            <me.grantland.widget.AutofitTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:text="Select measure content, press start button"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                autofit:layout_constraintBottom_toTopOf="@+id/rbWiFi"
                autofit:layout_constraintEnd_toEndOf="parent"
                autofit:layout_constraintStart_toStartOf="parent"
                autofit:layout_constraintTop_toTopOf="parent" />

            <!--<me.grantland.widget.AutofitTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:text="측정 항목을 선택하고 시작 버튼을 누르세요."
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                autofit:layout_constraintBottom_toTopOf="@+id/rbWiFi"
                autofit:layout_constraintEnd_toEndOf="parent"
                autofit:layout_constraintStart_toStartOf="parent"
                autofit:layout_constraintTop_toTopOf="parent" />-->

            <Button
                android:id="@+id/tvStart"
                style="@android:style/Widget.Material.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:text="Start"
                autofit:layout_constraintBottom_toBottomOf="parent"
                autofit:layout_constraintEnd_toEndOf="parent"
                autofit:layout_constraintHorizontal_bias="0.571"
                autofit:layout_constraintStart_toEndOf="@+id/tvCancel"
                autofit:layout_constraintTop_toTopOf="parent"
                autofit:layout_constraintVertical_bias="0.936" />

            <Button
                android:id="@+id/tvCancel"
                style="@android:style/Widget.Material.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                autofit:layout_constraintBottom_toBottomOf="parent"
                autofit:layout_constraintEnd_toEndOf="parent"
                autofit:layout_constraintHorizontal_bias="0.653"
                autofit:layout_constraintStart_toStartOf="parent"
                autofit:layout_constraintTop_toTopOf="parent"
                autofit:layout_constraintVertical_bias="0.936" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>

</layout>
