<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/linParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="220dp"
            android:padding="20dp"
            android:weightSum="1"
            android:gravity="center"
            android:background="#fff"
            android:orientation="vertical"
            autofit:layout_constraintBottom_toBottomOf="parent"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toTopOf="parent">

            <me.grantland.widget.AutofitTextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="F/W Update"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:weightSum="1"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/updateProgressbar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:progress="0"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tvProgressValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="center"
                    android:text="0%"
                    android:textSize="15sp"/>

            </LinearLayout>

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="updating..."
                android:textSize="17sp"/>

            <me.grantland.widget.AutofitTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="Please don't close the app..."
                android:textSize="17sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="end">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tvComplete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:text="Complete"
                    android:textSize="20sp"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</layout>
