<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                            

    <LinearLayout
        android:id="@+id/linParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1" android:tag="layout/macro_dialog_layout_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:autofit="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="220dp"
            android:padding="20dp"
            android:weightSum="1"
            android:gravity="center"
            android:background="#cfff"
            android:orientation="vertical">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Auto Measuring..."
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:weightSum="1"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/autoMeasureProgressbar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:progress="0"
                    android:max="100"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tvProgressValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="center"
                    android:text="0%"
                    android:textSize="15sp"/>

            </LinearLayout>

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="17sp" />

            <me.grantland.widget.AutofitTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="Do not close application"
                android:textSize="17sp"/>
            <!--<me.grantland.widget.AutofitTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="앱을 종료하지 마세요."
                android:textSize="17sp"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/btnComplete"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Complete"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

         